###
# Oscillate
# Plot a value against its own rolling average.
#   - data
#   - window = rolling average window
###

script Oscillate {
    input data   = 0;
    input window = 0;

    plot oscillate;
    if window > 1 {
        oscillate = data - Average(data, window);
    }
    else {
        oscillate = data;
    }
}
