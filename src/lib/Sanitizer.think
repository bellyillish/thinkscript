###
# Sanitize
#   - data
###

#include_once "./Chart.think"

script Sanitizer {
    input data = 0;

    def sanitized;
    if Chart().isValidBar and (IsNaN(data) or IsInfinite(data)) {
        sanitized = GetValue(sanitized, 1);
    }
    else {
        sanitized = data;
    }

    plot sanitizer = sanitized;
}
