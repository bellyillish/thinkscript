###
# Volatility
#   - data
#   - window
#   - annualize
###

script Volatility {
    input data      = 0;
    input window    = 20;
    input annualize = 252;

    def volatility = StDev(data, window);

    plot annualized;
    if annualize > 1 {
        annualized = volatility * Sqrt(annualize);
    }
    else {
        annualized = volatility;
    }
}
