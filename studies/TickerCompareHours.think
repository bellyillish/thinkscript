### INPUTS ###
    input Ticker = "";

    input Mode = {
        default "Combined",
        "Separate",
        "Cloud"
    };

    input Display = {
        default "Logarithmic",
        "Relative",
        "Absolute",
        "Tick"
    };

    input Period = {
        default "Chart",
        "Daily",
        "Weekly",
        "Monthly",
        "MonthlyOPEX",
        "Quarterly",
        "QuarterlyOPEX",
        "Earnings",
        "Yearly",
        "CandlesAgo",
        "SinceDate"
    };

    @Date input SinceDate = 20250407;
    input CandlesAgo      = 100;
    input Separators      = yes;
    input Sanitize        = no;
    input Oscillation     = 0;
    input Smoothing       = 0;
###


### LOOKUPS ###
    def rawOpen;
    def rawClose;
    if Ticker != "" {
        rawOpen  = open(Ticker);
        rawClose = close(Ticker);
    }
    else {
        rawOpen  = open;
        rawClose = close;
    }

    # Sanitize
    def dataOpen;
    def dataClose;
    if Sanitize {
        dataOpen  = Value(rawOpen);
        dataClose = Value(rawClose);
    }
    else {
        dataOpen  = rawOpen;
        dataClose = rawClose;
    }
###


### CALCULATIONS ###
    def isNewPeriod    = Periods(Period, SinceDate, CandlesAgo).isNew;
    def isActivePeriod = Periods(Period, SinceDate, CandlesAgo).isActive;

    # Logarithmic
    def logOpen;
    def logClose;
    if Display == Display.Logarithmic {
        logOpen  = Log(dataOpen);
        logClose = Log(dataClose);
    }
    else {
        logOpen  = dataOpen;
        logClose = dataClose;
    }

    # Open
    def startETH = logClose[1];
    def startRTH;
    if !Chart().isIntradayBar and !Chart().isMultiDay {
        startRTH = logOpen;
    }
    else {
        startRTH = logClose[1];
    }

    # Close
    def endRTH = logClose;
    def endETH;
    if Chart().isIntradayBar {
        endETH = logClose[1];
    }
    else if !Chart().isMultiDay {
        endETH = logOpen;
    }
    else {
        endETH = logClose;
    }

    # Tick
    def rawTickRTH;
    def rawTickETH;
    def rawTick;
    if Display == Display.Relative {
        rawTickRTH = endRTH / startRTH - 1;
        rawTickETH = endETH / startETH - 1;
        rawTick    = (endRTH / startRTH) / (endETH / startETH) - 1;
    }
    else {
        rawTickRTH = endRTH - startRTH;
        rawTickETH = endETH - startETH;
        rawTick    = rawTickRTH - rawTickETH;
    }

    # Cumulative
    def rawSumRTH;
    def rawSumETH;
    def rawSum;
    if isNewPeriod {
        rawSumRTH = rawTickRTH;
        rawSumETH = rawTickETH;
        rawSum    = rawTick;
    }
    else if Display == Display.Relative {
        rawSumRTH = (rawSumRTH[1] + 1) * (rawTickRTH + 1) - 1;
        rawSumETH = (rawSumETH[1] + 1) * (rawTickETH + 1) - 1;
        rawSum    = (rawSum[1] + 1) * (rawTick + 1) - 1;
    }
    else {
        rawSumRTH = rawSumRTH[1] + rawTickRTH;
        rawSumETH = rawSumETH[1] + rawTickETH;
        rawSum    = rawSum[1] + rawTick;
    }

    # Filters
    def sumRTH;
    def sumETH;
    def sum;
    def tick;
    if !Chart().isValidBar or !isActivePeriod {
        sumRTH  = Double.NaN;
        sumETH  = Double.NaN;
        sum     = Double.NaN;
        tick    = Double.NaN;
    }
    else {
        sumRTH  = Filters(rawSumRTH, Oscillation, Smoothing);
        sumETH  = Filters(rawSumETH, Oscillation, Smoothing);
        sum     = Filters(rawSum, Oscillation, Smoothing);
        tick    = Filters(rawTick, Oscillation, Smoothing);
    }
