### PLOTS ###
    DefineGlobalColor("Line",       CreateColor(48, 48, 48));
    DefineGlobalColor("Separator",  CreateColor(32, 32, 32));
    DefineGlobalColor("Background", CreateColor(12, 12, 12));

    # Tick
    plot T = tick;
    T.SetHiding(Display != Display.Tick);
    T.SetPaintingStrategy(PaintingStrategy.HISTOGRAM);
    T.DefineColor("Up", CreateColor(230, 205, 80));
    T.DefineColor("Down", CreateColor(77, 166, 255));
    T.DefineColor("Neutral", Color.DARK_GRAY);
    T.SetDefaultColor(T.Color("Neutral"));
    T.AssignValueColor(
        if isNewPeriod and isActivePeriod[1]
            then GlobalColor("Background")
        else if tick > 0
            then T.Color("Up")
        else if tick < 0
            then T.Color("Down")
            else T.Color("Neutral")
    );

    # Cumulative
    plot S = sum;
    S.SetHiding(Display == Display.Tick or Mode != Mode.Combined);
    S.DefineColor("Up", CreateColor(230, 205, 80));
    S.DefineColor("Down", CreateColor(77, 166, 255));
    S.DefineColor("Neutral", Color.DARK_GRAY);
    S.SetDefaultColor(S.Color("Neutral"));
    S.AssignValueColor(
        if isNewPeriod and isActivePeriod[1]
            then GlobalColor("Background")
        else if sum > 0
            then S.Color("Up")
        else if sum < 0
            then S.Color("Down")
            else S.Color("Neutral")
    );

    # Cumulative RTH
    plot RTH = sumRTH;
    RTH.SetHiding(Display == Display.Tick or Mode == Mode.Combined);
    RTH.DefineColor("Value", CreateColor(230, 205, 80));
    RTH.SetDefaultColor(RTH.Color("Value"));
    RTH.AssignValueColor(
        if isNewPeriod and isActivePeriod[1]
            then GlobalColor("Background")
            else RTH.Color("Value")
    );

    # Cumulative ETH
    plot ETH = sumETH;
    ETH.SetHiding(Display == Display.Tick or Mode == Mode.Combined);
    ETH.DefineColor("Value", CreateColor(77, 166, 255));
    ETH.SetDefaultColor(ETH.Color("Value"));
    ETH.AssignValueColor(
        if isNewPeriod and isActivePeriod[1]
            then GlobalColor("Background")
            else ETH.Color("Value")
    );

    # Cloud
    def cloudRTH = sumRTH;
    def cloudETH = sumETH;
    AddCloud(
        data1 = if Mode == Mode.Cloud and Display != Display.Tick
            then cloudRTH
            else Double.NaN,
        data2 = if Mode == Mode.Cloud and Display != Display.Tick
            then cloudETH
            else Double.NaN,
        color1 = RTH.Color("Value"),
        color2 = ETH.Color("Value")
    );

    # Line
    plot N = 0;
    N.SetDefaultColor(GlobalColor("Line"));
    N.HideBubble();
    N.HideTitle();
    N.Hide();

    # Separators
    AddVerticalLine(
        visible = Separators and isNewPeriod and isActivePeriod[1],
        color   = GlobalColor("Separator"),
        stroke  = Curve.SHORT_DASH,
        text    = ""
    );
